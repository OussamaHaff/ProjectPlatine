<resources>

    <!--Shape Appearance for small components like chips, buttons, text fields and FABs-->
    <style name="ShapeAppearance.Leaf.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">

      <item name="cornerFamilyTopLeft">rounded</item>
      <item name="cornerFamilyTopRight">cut</item>
      <item name="cornerFamilyBottomRight">rounded</item>
      <item name="cornerFamilyBottomLeft">cut</item>

      <item name="cornerSizeTopLeft">12dp</item>
      <item name="cornerSizeTopRight">0dp</item>
      <item name="cornerSizeBottomRight">12dp</item>
      <item name="cornerSizeBottomLeft">0dp</item>

    </style>

    <!--Shape Appearance for medium components like cards, alert dialogs-->
    <style name="ShapeAppearance.Leaf.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">

      <item name="cornerFamilyTopLeft">rounded</item>
      <item name="cornerFamilyTopRight">cut</item>
      <item name="cornerFamilyBottomRight">rounded</item>
      <item name="cornerFamilyBottomLeft">cut</item>

      <item name="cornerSizeTopLeft">28dp</item>
      <item name="cornerSizeTopRight">0dp</item>
      <item name="cornerSizeBottomRight">28dp</item>
      <item name="cornerSizeBottomLeft">0dp</item>

    </style>

    <!--Shape Appearance for large components like side and bottom navigation drawers-->
    <style name="ShapeAppearance.Leaf.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">

      <item name="cornerFamilyTopLeft">rounded</item>
      <item name="cornerFamilyTopRight">cut</item>
      <item name="cornerFamilyBottomRight">rounded</item>
      <item name="cornerFamilyBottomLeft">cut</item>

      <item name="cornerSizeTopLeft">28dp</item>
      <item name="cornerSizeTopRight">0dp</item>
      <item name="cornerSizeBottomRight">28dp</item>
      <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>
