<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
            app:constraintSetEnd="@id/animation_kayframe_1"
            app:constraintSetStart="@id/animation_kayframe_0"
            app:duration="2000">

        <OnSwipe
                app:touchAnchorId="@+id/rv_comments_list"
                app:touchAnchorSide="top"
                app:dragDirection="dragUp"/>


    </Transition>

    <ConstraintSet android:id="@+id/animation_kayframe_0">


    </ConstraintSet>


    <ConstraintSet android:id="@+id/animation_kayframe_1">

        <Constraint
                android:id="@+id/cv_post_card"
                android:layout_marginTop="1dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />
    </ConstraintSet>

</MotionScene>